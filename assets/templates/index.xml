<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <body>
    <listWithPreview id="Library_List">
      <header>
        <simpleHeader>
          <title>Libraries</title>
        </simpleHeader>
      </header>
      <menu>
        <sections>
          <menuSection>
            <items>
              <oneLineMenuItem id="popular" onHoldSelect="" onPlay="atv.loadURL('http://trailers.apple.com/MovieNav.xml');" onSelect="atv.loadURL('http://trailers.apple.com/MovieNav.xml');">
                <label>Movies</label>
                <preview>
                  <link>http://trailers.apple.com/Parade.xml?sort_by=seeds</link>
                </preview>
              </oneLineMenuItem>
              <oneLineMenuItem id="added" onHoldSelect="" onPlay="atv.loadURL('http://trailers.apple.com/TVNav.xml');" onSelect="atv.loadURL('http://trailers.apple.com/TVNav.xml');">
                <label>TV Shows</label>
                <preview>
                  <link>http://trailers.apple.com/Parade.xml?sort_by=date_added</link>
                </preview>
              </oneLineMenuItem>
              <oneLineMenuItem id="released" onHoldSelect="" onPlay="atv.loadURL('http://trailers.apple.com/MoviesGrid.xml?title=Recently%20Released&amp;sort_by=year');" onSelect="atv.loadURL('http://trailers.apple.com/MoviesGrid.xml?title=Recently%20Released&amp;sort_by=year');">
                <label>Anime</label>
                <preview>
                  <link>http://trailers.apple.com/Parade.xml?sort_by=year</link>
                </preview>
              </oneLineMenuItem>
              <oneLineMenuItem id="rated" onHoldSelect="" onPlay="atv.loadURL('http://trailers.apple.com/Search/search.xml');" onSelect="atv.loadURL('http://trailers.apple.com/Search/search.xml');">
                <label>Search</label>
                <preview>
                  <link>http://trailers.apple.com/Parade.xml?sort_by=rating</link>
                </preview>
              </oneLineMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>
  </body>
</atv>